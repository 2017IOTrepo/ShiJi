<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sev</item>
        <item name="colorPrimaryDark">@color/egi</item>
        <item name="colorAccent">@color/four</item>

    </style>


    <style name="CustomTheme" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/sev</item>
        <item name="colorPrimaryDark">@color/egi</item>
        <item name="colorAccent">@color/four</item>

        <item name="material_drawer_background">@color/side</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>



    </style>

    <style name="aboutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>


    </style>



    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
